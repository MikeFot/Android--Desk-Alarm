<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/tertiary_text</item>

        <!--Selector-->
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>

        <item name="colorButtonNormal">@color/primary_light</item>

        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu</item>

        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>

    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorTertiary">@color/text</item>
    </style>

    <style name="DigitalClockTextView" parent="android:Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="AppTheme.AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Switch" parent="AppTheme">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_light</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/accent</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/md_black_1000</item>
    </style>

</resources>